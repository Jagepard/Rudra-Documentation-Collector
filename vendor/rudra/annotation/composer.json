{
    "name"             : "rudra/annotation",
    "description"      : "Class & Method Annotation Reader",
    "type"             : "library",
    "keywords"         : [
        "rudra",
        "annotations",
        "annotation-processing",
        "annotation"
    ],
    "license"          : "MIT",
    "authors"          : [
        {
            "name"    : "Jagepard",
            "email"   : "jagepard@yandex.ru",
            "homepage": "https://jagepard.ru",
            "role"    : "Developer"
        }
    ],
    "support"          : {
        "email": "jagepard@yandex.ru"
    },
    "require"          : {
        "php"            : ">=8.0"
    },
    "autoload"         : {
        "psr-4": {
            "Rudra\\Annotation\\": "src/"
        }
    },
    "autoload-dev"     : {
        "psr-4": {
            "Rudra\\Annotation\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "config"           : {
        "optimize-autoloader": true,
        "prefer-stable"      : true
    }
}
