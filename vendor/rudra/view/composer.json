{
    "name"              : "rudra/view",
    "description"       : "Rudra framework",
    "type"              : "library",
    "keywords"          : [
        "rudra",
        "view",
        "mvc-pattern",
        "mvc"
    ],
    "license"           : "MIT",
    "authors"           : [
        {
            "name"     : "Jagepard",
            "email"    : "jagepard@yandex.ru",
            "homepage" : "https://jagepard.ru",
            "role"     : "Developer"
        }
    ],
    "support"           : {
        "email" : "jagepard@yandex.ru",
        "skype" : "jagepard.ru"
    },
    "require"           : {
        "php"               : ">=7.4",
        "rudra/container": "self.version"
    },
    "autoload"          : {
        "psr-4" : {
            "Rudra\\View\\" : "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev" : {
        "psr-4": {
            "Rudra\\View\\Tests\\" : "tests/"
        }
    },
    "minimum-stability" : "dev",
    "config"            : {
        "optimize-autoloader" : true,
        "prefer-stable"       : true
    }
}
